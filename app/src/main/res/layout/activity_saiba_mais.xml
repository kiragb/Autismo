<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFDF9"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFDF9"
        android:gravity="fill"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="520dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/linear"
                android:layout_width="match_parent"
                android:layout_height="1820dp"
                android:orientation="vertical">

            <Button
                android:id="@+id/button"
                android:layout_width="410dp"
                android:layout_height="50dp"
                android:layout_marginTop="-1dp"
                android:background="@drawable/menu"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.002">

            </Button>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="111dp"
                android:layout_height="50dp"
                android:layout_marginLeft="-25dp"
                android:translationZ="90dp"
                app:layout_constraintBottom_toBottomOf="@+id/button"
                app:layout_constraintEnd_toEndOf="@+id/button"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toTopOf="@+id/button"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:layout_width="108dp"
                android:layout_height="50dp"
                android:layout_marginTop="-50dp"
                android:fontFamily="@font/adlery"
                android:gravity="center"
                android:text="BRINK+"
                android:textColor="#2E0084"
                android:textSize="40dp"
                android:translationZ="90dp"
                app:layout_constraintBottom_toBottomOf="@+id/button"
                app:layout_constraintEnd_toEndOf="@+id/button"
                app:layout_constraintHorizontal_bias="0.182"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toTopOf="@+id/button"
                app:layout_constraintVertical_bias="1.0">

            </TextView>


            <ImageView
                android:id="@+id/menu"
                android:layout_width="70dp"
                android:layout_height="41dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="-40dp"
                android:translationZ="90dp"
                app:layout_constraintBottom_toBottomOf="@+id/button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.997"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toTopOf="@+id/button"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/ic_baseline_menu_24" />


                <ImageView
                    android:id="@+id/gotas"
                    android:layout_width="70dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="90sp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintEnd_toStartOf="@+id/textView7"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button"
                    app:srcCompat="@drawable/gotas" />

                <ImageView
                    android:id="@+id/gotas2"
                    android:layout_width="70dp"
                    android:layout_height="68dp"
                    android:layout_marginLeft="-30sp"
                    android:layout_marginTop="32dp"
                    android:rotationY="180"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/textView7"
                    app:layout_constraintTop_toBottomOf="@+id/menu"
                    app:srcCompat="@drawable/gotas" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="196dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="44dp"
                    android:fontFamily="@font/bryndan"
                    android:gravity="center"
                    android:text="sAiBa mAiS"
                    android:textAllCaps="false"
                    android:textColor="#454040"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.497"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button">

                </TextView>

                <Button
                    android:id="@+id/button30"
                    android:layout_width="356dp"
                    android:layout_height="132dp"
                    android:layout_marginTop="52dp"
                    android:background="@drawable/cards_iniciais"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.49"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7">

                </Button>

                <Button
                    android:id="@+id/dicas"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/botao_inicial"
                    android:text="Ver Mais..."
                    android:textAllCaps="false"
                    android:textColor="#005EEF"
                    app:layout_constraintBottom_toBottomOf="@+id/button30"
                    app:layout_constraintEnd_toEndOf="@+id/button30"
                    app:layout_constraintHorizontal_bias="0.209"
                    app:layout_constraintStart_toEndOf="@+id/imageView18"
                    tools:ignore="TouchTargetSizeCheck">

                </Button>

                <Button
                    android:id="@+id/button32"
                    android:layout_width="356dp"
                    android:layout_height="132dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/btamarelo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.49"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button30">

                </Button>

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="184dp"
                    android:layout_height="112dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/video1"
                    android:translationZ="90sp"
                    app:layout_constraintBottom_toBottomOf="@+id/button32"
                    app:layout_constraintStart_toStartOf="@+id/button32"
                    app:layout_constraintTop_toTopOf="@+id/button32" />

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="184dp"
                    android:layout_height="112dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/video1"
                    android:translationZ="90sp"
                    app:layout_constraintBottom_toBottomOf="@+id/button30"
                    app:layout_constraintStart_toStartOf="@+id/button30"
                    app:layout_constraintTop_toTopOf="@+id/button30"
                    app:layout_constraintVertical_bias="0.6"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:layout_width="146dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="28dp"
                    android:fontFamily="@font/bryndan"
                    android:gravity="center"
                    android:text="Dicas"
                    android:textColor="#D6417D"
                    android:textSize="25sp"
                    android:translationZ="90sp"
                    app:layout_constraintBottom_toTopOf="@+id/dicas"
                    app:layout_constraintEnd_toEndOf="@+id/button30"
                    app:layout_constraintHorizontal_bias="0.133"
                    app:layout_constraintStart_toEndOf="@+id/imageView18"
                    app:layout_constraintTop_toTopOf="@+id/button30"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="146dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/bryndan"
                    android:gravity="center"
                    android:text="O que Ã© DI?"
                    android:textColor="#E8BF70"
                    android:textSize="25sp"
                    android:translationZ="90sp"
                    app:layout_constraintEnd_toEndOf="@+id/button32"
                    app:layout_constraintHorizontal_bias="0.166"
                    app:layout_constraintStart_toEndOf="@+id/imageView20"
                    app:layout_constraintTop_toTopOf="@+id/button32" />

                <Button
                    android:id="@+id/di"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_marginEnd="32dp"
                    android:background="@drawable/botao_inicial"
                    android:text="Ver Mais..."
                    android:textAllCaps="false"
                    android:textColor="#005EEF"
                    app:layout_constraintBottom_toBottomOf="@+id/button32"
                    app:layout_constraintEnd_toEndOf="@+id/button32"
                    app:layout_constraintHorizontal_bias="0.818"
                    app:layout_constraintStart_toEndOf="@+id/imageView20"
                    app:layout_constraintTop_toBottomOf="@+id/textView30"
                    app:layout_constraintVertical_bias="0.0"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck">

                </Button>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
